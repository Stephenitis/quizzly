<div id='game_deck_container'>

  <% deck_all = list_all_decks %>

  <% if deck_all %>
    <% deck_all.each do |deck| %>
    <div class="game_deck_board">
      <form method="post" action="/game/create">  
        <span>
          <h1><%= deck.name %></h1><h2><%=deck.cards.length%> cards</h2>
        </span>
        
        <a href="/deck/<%=deck.id%>">View all cards </a>
        <input type='hidden' name='game_deck[deck_id]' value='<%= deck.id %>'>
        <input type='hidden' name='game_deck[user_id]' value='<%= @user.id %>'><br>
        <input class='button' type='submit' value='play!'>   
      </form>
    </div>
    <% end %>
    
  <% end %>

</div>
