<div class="question-box">
  <form method='post' action='/game/attempt'>
    
    <input type="hidden" name="game_id" value="<%= @current_game_id %>" >
    <input type="hidden" name="card_id" value="<%= @current_card.id %>" >

    <div id="question">
      <%= @current_card.question %>
    </div>

    <input type="button" class='btn btn-small btn-primary' id='show-answer-button' value="Show Answer" >

    <br><br>

    <div id="answer">
      <p><%= @current_card.answer %></p>
      <p><input class='btn btn-large btn-primary' type="submit" name="status" value="true"><input class='btn btn-large btn-primary' type="submit" name="status" value="false"></p>
    </div>

  </form>
</div>
